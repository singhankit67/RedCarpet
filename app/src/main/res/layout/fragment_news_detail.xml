<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context=".NewsDetailFragment">
        <com.flaviofaria.kenburnsview.KenBurnsView
            android:layout_width="match_parent"
            android:layout_height="435dp"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/kennyBurn"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="435dp"
            android:id="@+id/ImageView"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"
            android:transitionName="ImageView"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/kennyBurn"
            android:layout_marginEnd="23dp"
            app:layout_constraintTop_toTopOf="@id/kennyBurn"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="376dp"
            android:layout_alignParentTop="true"
            android:id="@+id/elaborateButton"
            android:src="@drawable/ic_baseline_navigate_next_240"
            app:backgroundTint="@color/colorAccent1"
            app:elevation="15dp"
            app:fabSize="normal"/>
        <com.github.florent37.shapeofview.shapes.ArcView
            android:layout_width="match_parent"
            android:layout_height="351dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:elevation="10dip"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/arcView"
            app:shape_arc_position="top"
            app:shape_arc_height="40dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/constraintlayout2"
                android:background="@color/colorPrimaryDark">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:layout_constraintTop_toTopOf="@id/constraintlayout2"
                    android:background="@drawable/top_shadow1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent1"
                    android:text="Author"
                    app:layout_constraintTop_toTopOf="@id/constraintlayout2"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginStart="23dp"
                    android:id="@+id/Author"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:layout_marginEnd="70dp"
                    android:layout_marginTop="57dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="4"
                    app:layout_constraintTop_toBottomOf="@id/Author"
                    android:ellipsize="end"
                    android:id="@+id/Title"
                    android:text="Title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_below="@id/Author"
                    android:textColor="#fff"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="23dp"
                    android:layout_marginEnd="23dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Title"
                    android:maxLines="5"
                    android:ellipsize="end"
                    android:text="content"
                    android:layout_marginTop="5dp"
                    android:id="@+id/content2"
                    app:layout_constraintTop_toBottomOf="@id/Title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#D0FFFFFF"
                    android:layout_marginStart="23dp"
                    android:layout_marginEnd="23dp"/>
                <com.github.curioustechizen.ago.RelativeTimeTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/content2"
                    app:layout_constraintTop_toBottomOf="@id/content2"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="9dp"
                    android:id="@+id/time2"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/colorAccent1"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="23dp"
                    android:text="8 hours ago"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.github.florent37.shapeofview.shapes.ArcView>

</androidx.constraintlayout.widget.ConstraintLayout>